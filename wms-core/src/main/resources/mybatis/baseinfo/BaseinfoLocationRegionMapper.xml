<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lsh.wms.core.dao.baseinfo.BaseinfoLocationRegionDao" >

	<resultMap id="baseinfoLocationRegionResultMap" type="BaseinfoLocationRegion">
		<id property="id" column="id"/>
		<result property="locationId" column="location_id"/>
		<result property="length" column="length"/>
		<result property="width" column="width"/>
		<result property="createdAt" column="created_at"/>
		<result property="updatedAt" column="updated_at"/>
		<result property="description" column="description"/>
		<result property="type" column="type"/>
		<result property="ownerid" column="ownerId"/>
		<result property="isValid" column="is_valid"/>
		<result property="regionStrategy" column="region_strategy"/>

	</resultMap>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="BaseinfoLocationRegion">
		insert into baseinfo_location_region (
			location_id,length,width,created_at,updated_at,description,
			type,ownerId,is_valid,region_strategy
    	) values (
			#{locationId},#{length},#{width},#{createdAt},#{updatedAt},#{description},
			#{type},#{ownerid},#{isValid},#{regionStrategy}
    	)
	</insert>

	<update id="update" parameterType="BaseinfoLocationRegion">
		update baseinfo_location_region
    	<set>
  			<if test="locationId != null">location_id=#{locationId},</if>
  			<if test="length != null">length=#{length},</if>
  			<if test="width != null">width=#{width},</if>
  			<if test="createdAt != null">created_at=#{createdAt},</if>
  			<if test="updatedAt != null">updated_at=#{updatedAt},</if>
  			<if test="description != null">description=#{description},</if>
  			<if test="type != null">type=#{type},</if>
  			<if test="ownerid != null">ownerId=#{ownerid},</if>
			<if test="isValid != null">is_valid=#{isValid},</if>
			<if test="regionStrategy != null">region_strategy=#{regionStrategy}</if>
		</set>
		where location_id=#{locationId} and is_valid=1
	</update>
  
	<select id="getBaseinfoLocationRegionById" parameterType="int" resultMap="baseinfoLocationRegionResultMap">
		select * from baseinfo_location_region
		where location_id=#{locationId}
	</select>
  
	<select id="countBaseinfoLocationRegion" parameterType="map" resultType="int">
		select count(*) from baseinfo_location_region
		<include refid="queryCondition"/>
	</select>
  
	<select id="getBaseinfoLocationRegionList" parameterType="map" resultMap="baseinfoLocationRegionResultMap">
		select * from baseinfo_location_region
		<include refid="queryCondition"/>
		<if test="start != null and limit != null">
		limit #{start},#{limit}
		</if>
	</select>
  
	<sql id="queryCondition">
		<where>
			<if test="id != null">id=#{id}</if>
			<if test="locationId != null">and location_id=#{locationId}</if>
			<if test="length != null">and length=#{length}</if>
			<if test="width != null">and width=#{width}</if>
			<if test="createdAt != null">and created_at=#{createdAt}</if>
			<if test="updatedAt != null">and updated_at=#{updatedAt}</if>
			<if test="description != null">and description=#{description}</if>
			<if test="type != null">and type=#{type}</if>
			<if test="ownerid != null">and ownerId=#{ownerid}</if>
			<if test="isValid != null">and is_valid=#{isValid}</if>
			<if test="regionStrategy != null">and region_strategy=#{regionStrategy}</if>
		</where>
	</sql>
   
</mapper>